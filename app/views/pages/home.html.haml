.home
  .col-md-7
    %h1 Welcome to Achievr
    %p Achievr is a free service that helps you keep track of how close you are to achieving your goals, whether that be getting fit, learning to make websites, or finally turning the garage into that playroom you've always been talking about.

  .col-md-5
    %h3 Sign in

    = form_tag session_path(:user) do
      .form-group
        = label_tag :email, nil, :class => "sr-only"
        = text_field_tag 'user[email]', nil, :placeholder => "Enter email address"
      .form-group
        = label_tag :password, nil, :class => "sr-only"
        = password_field_tag 'user[password]', nil, :placeholder => "Enter password"

      %button Sign in
      = link_to "Forgotten your password?", new_password_path(:user)

    %hr
    %h3 Sign up

    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .form-group
        = label_tag :email, nil, :class => "sr-only"
        = f.email_field :email, :placeholder => "Enter email address"
      .form-group
        = label_tag :password, nil, :class => "sr-only"
        = f.password_field :password, :placeholder => "Enter password"
      .form-group
        = label_tag :password_confirmation, nil, :class => "sr-only"
        = f.password_field :password_confirmation, :placeholder => "Confirm password"
      
      = f.submit