= link_to '< Back to goals', goals_path

%h1 test

%h3 Name
= best_in_place @goal, :name, :type => :input

%h3 Description
= best_in_place @goal, :name, :type => :textarea

%h3 Tasks
- @goal.tasks.each do |task|
  %p= task.name
  %p= task.description
  %p= task.status
  %hr

%h3 Completed
= @goal.percentage

= link_to "+ New task", new_goal_task_path(@goal)

= link_to 'Delete goal', @goal, method: :delete